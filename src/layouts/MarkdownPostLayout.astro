---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
    <style>
        .larr:link {
            font-size: 2rem;
        }
        .larr:visited {
            color: red;
        }
        .larr:hover {
            color: #000000;
        }
        img {
            background-color: purple;
        }
    </style>
    <a href="/blog" class="larr">&larr;</a>
    <p>Published on(via frontmatter): {frontmatter.pubDate.slice(0, 10)}</p>
    <p>writtern by {frontmatter.author}</p>
    <img src={frontmatter.image.url} alt={frontmatter.image.alt} height="300" />
    <slot />
</BaseLayout>
