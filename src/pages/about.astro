---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "about me";

const identity = {
    fname: "naveed",
    lname: "wani",
    occupation: "web dev",
    hobbies: ["code", "game", "baseball"],
};
const skills = ["js", "go", "nvim", "zig"];

const happy = true;
const finished = false;
const goal = 4;
---

<BaseLayout pageTitle={pageTitle}>
    <h2>... and my Astro website!</h2>
    <p>
        I am working through astro's introductory tutorial. This is my second
        page.
    </p>
    <p>
        This site will update as I complete more of the tutorial, so keep
        checking back.
    </p>
    <p>Here are some facts about me:</p>
    <ul>
        <li>my name is {identity.fname}</li>
        <li>
            two of my hobbies are: {identity.hobbies[0]} and {
                identity.hobbies[1]
            }
        </li>
    </ul>
    <p>my skills are:</p>
    <ul>
        {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>
    <p>
        {happy && <p>i am happy learning astro</p>}
        {finished && <p>i am not finished with tutorial</p>}
        {
            goal === 4 ? (
                <p>my goal is to finish tutorial in 3 days</p>
            ) : (
                <p>maybe more then 3 days</p>
            )
        }
    </p>
</BaseLayout>
